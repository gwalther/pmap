<%= form_for(@processdef) do |f| %>
  <% if @processdef.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@processdef.errors.count, "error") %> prohibited this Process from being saved:</h2>

      <ul>
      <% @processdef.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="actions">
    <%= f.submit, "Create Process" %>
  </div>
<% end %>
